{
  "extends": [
    "eslint:recommended",
    "plugin:cypress/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true,
    "cypress/globals": true
  },
  "rules": {
    "no-unused-vars": ["error", { "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }]
  },
  "overrides": [
    {
      "files": ["web/**/*"],
      "extends": [
        "plugin:react/recommended"
      ],
      "settings": {
        "react": {
          "version": "detect"
        }
      }
    }
  ]
}
